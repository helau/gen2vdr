+		SAA716x_WR(I2C_DEV[i], INT_CLR_STATUS, 0x1fff);
+
+		/* enable interrupts: transaction done, arbitration, No Ack and I2C error */
+		SAA716x_WR(I2C_DEV[i], INT_SET_ENABLE, 0x00c7);
