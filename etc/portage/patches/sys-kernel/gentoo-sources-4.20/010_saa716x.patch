+			SAA716x_EPWR(fgpi, INT_CLR_STATUS, 0x7F);
+			SAA716x_EPWR(BAM, BAM_FGPI3_DMA_BUF_MODE, buf_mode | 7);
+		}
+		write_index = (buf_mode >> 3) & 0x7;
+		break;
