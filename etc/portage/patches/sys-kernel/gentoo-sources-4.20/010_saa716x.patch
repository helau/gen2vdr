+			fgpi_entry->dma_buf[fgpi_entry->read_index].list_len,
+			PCI_DMA_FROMDEVICE);
+
+		if (data[0] != 0x47) {
+			u32 val = SAA716x_EPRD(fgpi, FGPI_CONTROL);
+			val &= ~0x3000;
+			SAA716x_EPWR(fgpi, FGPI_CONTROL, val);
