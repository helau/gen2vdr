+static int sti7109_get_video_format(struct sti7109_dev *sti7109, video_size_t *vs)
+{
+	osd_raw_cmd_t cmd;
+	u8 cmd_data[7];
+	u8 result_data[MAX_RESULT_LEN];
+	int ret_val = -EINVAL;
+
+	cmd_data[0] = 0x00;
+	cmd_data[1] = 0x05; /* command length */
