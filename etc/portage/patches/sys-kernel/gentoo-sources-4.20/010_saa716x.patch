+		dprintk(SAA716x_ERROR, 1, "ERROR: Header Read failed <%d>", ret);
+		goto err0;
+	}
+
+	/* Allocate length */
+	rom_data = kzalloc(sizeof (u8) * rom_header.data_size, GFP_KERNEL);
+	if (rom_data == NULL) {
+		dprintk(SAA716x_ERROR, 1, "ERROR: out of memory");
+		ret = -ENOMEM;
+		goto err1;
+	}
+
+	/* Get data */
+	for (i = 0; i < rom_header.data_size; i++) {
