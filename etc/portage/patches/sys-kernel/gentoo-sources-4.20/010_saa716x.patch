+#define CGU_CLKS	15
+#define PLL_FREQ	2500
+
+int saa716x_cgu_init(struct saa716x_dev *saa716x)
+{
+	int M, N;
+	u8 i;
+	u32 boot_div[15], freq[15];
+	u32 CGU_FDC[15] = {
+		CGU_FDC_0,
+		CGU_FDC_1,
+		CGU_FDC_2,
+		CGU_FDC_3,
+		CGU_FDC_4,
+		CGU_FDC_5,
+		CGU_FDC_6,
+		CGU_FDC_7,
+		CGU_FDC_8,
+		CGU_FDC_9,
+		CGU_FDC_10,
+		CGU_FDC_11,
+		CGU_FDC_12,
+		CGU_FDC_13,
+	};
