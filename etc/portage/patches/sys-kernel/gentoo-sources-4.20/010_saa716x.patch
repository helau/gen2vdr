+#define MSI_CONFIG_REGS		49
+
+int saa716x_msi_init(struct saa716x_dev *saa716x)
+{
+	u32 ena_l, ena_h, sta_l, sta_h;
+	int i;
+	u32 MSI_CONFIG_REG[49] = {
+		MSI_CONFIG0,
+		MSI_CONFIG1,
+		MSI_CONFIG2,
+		MSI_CONFIG3,
+		MSI_CONFIG4,
+		MSI_CONFIG5,
