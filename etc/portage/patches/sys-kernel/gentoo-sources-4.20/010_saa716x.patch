+	dprintk(SAA716x_ERROR, 1, "Reading ROM header %02x bytes",
+		sizeof (struct saa716x_romhdr));
+
+	for (i = 0; i < sizeof (struct saa716x_romhdr); i++) {
+		err = eeprom_read_byte(saa716x, i, &buf[i]);
