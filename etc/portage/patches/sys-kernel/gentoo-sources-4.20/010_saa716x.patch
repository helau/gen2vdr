+int saa716x_dump_eeprom(struct saa716x_dev *saa716x)
+{
+	u8 buf[256];
+	int i, err = 0;
+
+	for (i = 0; i < 256; i++) {
+		err = eeprom_read_byte(saa716x, i, &buf[i]);
+		if (err < 0) {
+			dprintk(SAA716x_ERROR, 1, "EEPROM Read error");
+			return err;
+		}
+		dprintk(SAA716x_NOTICE, 1, "EEPROM <0x%02x>=[%02x] (%c)", i, buf[i], (char )buf[i]);
+	}
+
+	return 0;
+}
