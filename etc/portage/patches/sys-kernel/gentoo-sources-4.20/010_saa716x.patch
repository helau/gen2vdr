+				data[0], data[1], data[2], data[3],
+				data[4], data[5], data[6], data[7]);
+		}
+
+		dvb_dmx_swfilter_packets(demux, data, 348);
+
+		fgpi_entry->read_index = (fgpi_entry->read_index + 1) & 7;
+	} while (write_index != fgpi_entry->read_index);
+}
